{
  "manifest_version": 2,

  "name": "Indico Analysis Plugin",
  "description": "This extension can analyze a page sentiment",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
   "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "https://ajax.googleapis.com/*"
  ]
}